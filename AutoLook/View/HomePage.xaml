<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" x:Name="HomePage" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:AutoLook.View" x:Class="AutoLook.View.HomePage" Title="Vehículos">
    <ContentPage.Resources>
        <ResourceDictionary>
            <local:ImageConverter x:Key="cnvImageConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <AbsoluteLayout BackgroundColor="White">
            <StackLayout x:Name="stkContainer" BackgroundColor="White" HorizontalOptions="FillAndExpand" AbsoluteLayout.LayoutBounds="0.0, 0.0, 1.0, 1.0" AbsoluteLayout.LayoutFlags="All">
                <!--Logo Image-->
                <StackLayout Margin="0,10,0,0">
                    <Image Source="AutoLookLogo.png" HeightRequest="130" />
                </StackLayout>
                <StackLayout Orientation="Horizontal" Padding="10,0">
                    <!--<Button Text="Filtrar" Command="{Binding FiltersCommand}" VerticalOptions="Start" WidthRequest="80" BackgroundColor="#9b9b9b" TextColor="White" FontAttributes="Bold" HeightRequest="30" />-->
                    <Label Text="Ordenar por: " TextColor="#000066" HorizontalOptions="EndAndExpand" VerticalTextAlignment="Center" />
                    <Picker x:Name="IndustryTypePicker1" SelectedIndex="{Binding FiltroOrdenar}" HorizontalOptions="FillAndExpand" WidthRequest="80">
                        <Picker.Items>
                            <x:String>Ninguno</x:String>
                            <x:String>Precio: Menor a Mayor</x:String>
                            <x:String>Precio: Mayor a Menor</x:String>
                            <x:String>Kilometraje: Menor a Mayor</x:String>
                            <x:String>Kilometraje: Mayor a Menor</x:String>
                            <x:String>Año: Menor a Mayor</x:String>
                            <x:String>Año: Mayor a Menor</x:String>
                        </Picker.Items>
                    </Picker>
                </StackLayout>
                <StackLayout BackgroundColor="#000066" HorizontalOptions="FillAndExpand" Orientation="Vertical" VerticalOptions="FillAndExpand" Padding="10">
                    <ActivityIndicator IsRunning="{Binding IsBusy, Mode=TwoWay}" Color="White" VerticalOptions="Center" HeightRequest="40" HorizontalOptions="Center" IsVisible="{Binding IsBusy, Mode=TwoWay}"/>
                    <ListView x:Name="lstvVehicles" ItemsSource="{Binding lstVehiculos}" RowHeight="100">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Grid Padding="5,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Image Source="{Binding Cover.Image, Converter={StaticResource cnvImageConverter}}" />
                                        <StackLayout Grid.Column="1" Orientation="Vertical">
                                            <StackLayout.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Path=BindingContext.VerVehiculoCommand, Source={x:Reference HomePage}}" CommandParameter="{Binding Id}" />
                                            </StackLayout.GestureRecognizers>
                                            <Label Text="{Binding Brand}" TextColor="#000066 " FontSize="14" />
                                            <Label Text="{Binding Model}" TextColor="#000066 " FontSize="14" />
                                            <Label Text="{Binding Year}" TextColor="#000066 " FontSize="14" />
                                            <Label Text="{Binding Price}" TextColor="#000066 " FontSize="14" />
                                        </StackLayout>
                                        <Image Grid.Column="2" x:Name="imgView" HorizontalOptions="EndAndExpand" VerticalOptions="Center" Source="right.png" HeightRequest="25" WidthRequest="25" />
                                    </Grid>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
            </StackLayout>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>